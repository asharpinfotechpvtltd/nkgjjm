@page
@model Nkgjjm.Areas.Panel.Pages.Blocks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="intro-y box mt-5">
    <div class="flex flex-col sm:flex-row items-center p-5 border-b border-slate-200/60 dark:border-darkmode-400">
        <h2 class="font-medium text-base mr-auto">
            Edit Block
        </h2>
    </div>
    <form method="post">
        <div id="horizontal-form" class="p-5">
            <input type="hidden" asp-for="DistBlock.Id" />
            <div class="preview">
                <div class="form-inline">
                    <label asp-for="DistBlock.District" class="form-label sm:w-20"></label>
                    <select asp-for="DistBlock.District" class="form-control" asp-items="@Model.District" asp-for="DistBlock.">
                        <option>Select District</option>
                    </select>
                    <span asp-validation-for="DistBlock.District" class="text-danger"></span>
                </div>
                <div class="form-inline mt-5">
                    <label asp-for="DistBlock.Block" class="form-label sm:w-20"></label>
                    <input asp-for="DistBlock.Block" class="form-control" />
                    <span asp-validation-for="DistBlock.Block" class="text-danger"></span>
                </div>
            </div>

            <div class="sm:ml-20 sm:pl-5 mt-5">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
