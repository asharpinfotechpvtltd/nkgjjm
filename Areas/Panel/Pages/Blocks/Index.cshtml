@page
@model Nkgjjm.Areas.Panel.Pages.Blocks.IndexModel

@{
    ViewData["Title"] = "Index";
    int i = 1;
}
<div class="top-bar">
    <nav aria-label="breadcrumb" class="-intro-x mr-auto hidden sm:flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Application</a></li>
            <li class="breadcrumb-item active" aria-current="page">Blocks</li>
        </ol>
    </nav>
    <!-- END: Account Menu -->
</div>
<h2 class="intro-y text-lg font-medium mt-10">
    Block List
</h2>
<div class="grid grid-cols-12 gap-6 mt-5">
    <div class="intro-y col-span-12 flex flex-wrap sm:flex-nowrap items-center mt-2">
        <a class="btn btn-primary shadow-md mr-2" asp-page="Create">Add New Block</a>

        <div class="hidden md:block mx-auto text-slate-500">Showing 1 to 3 of 3 entries</div>
        <div class="w-full sm:w-auto mt-3 sm:mt-0 sm:ml-auto md:ml-0">
            <div class="w-56 relative text-slate-500">
                <input type="text" class="form-control w-56 box pr-10" placeholder="Search...">
                <i class="w-4 h-4 absolute my-auto inset-y-0 mr-3 right-0" data-lucide="search"></i>
            </div>
        </div>
    </div>
    <!-- BEGIN: Data List -->
    <div class="intro-y col-span-12 overflow-auto lg:overflow-visible">
        <table class="table table-report -mt-2">
            <thead>
                <tr>


                    <th class="text-center whitespace-nowrap">ID</th>
                    <th class="text-center whitespace-nowrap">BLOCK</th>
                    <th class="text-center whitespace-nowrap">DISTRICT</th>

                    <th class="text-center whitespace-nowrap">ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.BlockList)
                {

                    <tr class="intro-x">
                        <td class="text-center">
                            @i
                        </td>
                        <td class="text-center">
                            @item.Block
                        </td>
                        <td class="text-center">
                            @item.District
                        </td>
                        <td class="table-report__action w-56">
                            <div class="flex justify-center items-center">
                                <a class="flex items-center mr-3" href="javascript:;"> <i data-lucide="check-square" class="w-4 h-4 mr-1"></i> Edit </a>

                            </div>
                        </td>
                    </tr>
                    i++;
                }

            </tbody>
        </table>
    </div>
</div>
