@page
@model Nkgjjm.Areas.Panel.Pages.AssignMaterial.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="top-bar">
    <nav aria-label="breadcrumb" class="-intro-x mr-auto hidden sm:flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Application</a></li>
            <li class="breadcrumb-item active" aria-current="page">Item Issued List</li>
        </ol>
    </nav>
    <!-- END: Account Menu -->
</div>
<h2 class="intro-y text-lg font-medium mt-10">
    Item Issued List
</h2>
<div class="grid grid-cols-12 gap-6 mt-5">

    <div class="intro-y col-span-12 flex flex-wrap sm:flex-nowrap items-center mt-2">
        <a class="btn btn-primary shadow-md mr-2" asp-page="Create">Assign Material</a>
        <div class="hidden md:block mx-auto text-slate-500">Showing 0 to 0 of 0 entries</div>
        <div class="w-full sm:w-auto mt-3 sm:mt-0 sm:ml-auto md:ml-0">
            <div class="w-56 relative text-slate-500">
                <form method="post">
                    <input type="text" class="form-control w-56 box pr-10" placeholder="Search..." name="jobworkid">
                    <i class="w-4 h-4 absolute my-auto inset-y-0 mr-3 right-0" data-lucide="search"></i>
                </form>
            </div>
        </div>
    </div>

    <!-- BEGIN: Data List -->
    <div class="intro-y col-span-12 overflow-auto lg:overflow-visible">
        <table class="table table-report -mt-2">
            <thead>
                <tr>
                    <th>
                        JobWork Id
                    </th>
                    <th>
                        RawMaterial Id
                    </th>
                    <th>
                        Item Name
                    </th>
                    <th>
                        Picked Qty
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.SPMaterialIssuance != null && Model.SPMaterialIssuance.Count > 0)
                {
                    @foreach (var item in Model.SPMaterialIssuance)
                    {
                        <tr>
                            <td>
                                @item.JobWorkId
                            </td>
                            <td>
                                @item.RawMaterialId
                            </td>
                            <td>
                                @item.ItemName
                            </td>
                            <td>
                                <input type="text" value="@item.Pickedqty" />
                            </td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.JobWorkId">Edit</a> |
                                <a asp-page="./Details" asp-route-id="@item.JobWorkId">Details</a> |
                                <a asp-page="./Delete" asp-route-id="@item.JobWorkId">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<!-- BEGIN: Delete Confirmation Modal -->
<div id="delete-confirmation-modal" class="modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body p-0">
                <div class="p-5 text-center">
                    <i data-lucide="x-circle" class="w-16 h-16 text-danger mx-auto mt-3"></i>
                    <div class="text-3xl mt-5">Are you sure?</div>
                    <div class="text-slate-500 mt-2">
                        Do you really want to delete these records?
                        <br>
                        This process cannot be undone.
                    </div>
                </div>
                <div class="px-5 pb-8 text-center">
                    <button type="button" data-tw-dismiss="modal" class="btn btn-outline-secondary w-24 mr-1">Cancel</button>
                    <button type="button" class="btn btn-danger w-24">Delete</button>
                </div>
            </div>
        </div>
    </div>
</div>



