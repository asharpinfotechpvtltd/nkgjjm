@page
@model Nkgjjm.Areas.Panel.Pages.Contractor.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="intro-y box mt-5">
    <div class="flex flex-col sm:flex-row items-center p-5 border-b border-slate-200/60 dark:border-darkmode-400">
        <h2 class="font-medium text-base mr-auto">
            Add Contractor
        </h2>
    </div>
    <form method="post">
        <div id="horizontal-form" class="p-5">
            <div class="preview">
                <div class="form-inline mt-5">
                    <label class="form-label sm:w-20">Contractor Name</label>
                    <input asp-for="Contractors.ContractorName" class="form-control" />
                    <span asp-validation-for="Contractors.ContractorName" class="text-danger"></span>
                </div>
                <div class="form-inline mt-5">
                    <label class="form-label sm:w-20">Contact</label>
                    <input asp-for="Contractors.ContractorContact" class="form-control" />
                    <span asp-validation-for="Contractors.ContractorContact" class="text-danger"></span>
                </div>
                <div class="form-inline mt-5">
                    <label class="form-label sm:w-20">Company Name</label>
                    <input asp-for="Contractors.CompanyName" class="form-control" />
                    <span asp-validation-for="Contractors.CompanyName" class="text-danger"></span>
                </div>

                <div class="form-inline mt-5">
                    <label asp-for="Contractors.Status" class="form-label sm:w-20"></label>
                    <select asp-for="Contractors.Status" class="form-control">
                        <option>Active</option>
                        <option>Pending</option>
                    </select>
                    <span asp-validation-for="Contractors.Status" class="text-danger"></span>
                </div>
                <div class="sm:ml-20 sm:pl-5 mt-5">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
