@page
@model Nkgjjm.Areas.Panel.Pages.Warehouseincharge.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="intro-y box mt-5">
    <div class="flex flex-col sm:flex-row items-center p-5 border-b border-slate-200/60 dark:border-darkmode-400">
        <h2 class="font-medium text-base mr-auto">
            Add Village Incharge
        </h2>
    </div>
    <form method="post">
        <div id="horizontal-form" class="p-5">
            <div class="preview">
                <div class="form-inline">
                    <label for="horizontal-form-1" class="form-label sm:w-20">District Name</label>
                    <select id="ddldistname" type="text" asp-for="WarehouseIncharges.WareHouseid" asp-items="Model.WarehouseList" class="form-control">
                        <option>Select Warehouse List</option>
                    </select>
                </div>
                <div class="form-inline">
                    <label for="horizontal-form-1" class="form-label sm:w-20">Incharge Name</label>
                    <select id="ddldistname" type="text" asp-for="WarehouseIncharges.Employeeid" asp-items="Model.WarehouseList" class="form-control">
                        <option>Select Warehouse List</option>
                    </select>
                </div>
                <div class="sm:ml-20 sm:pl-5 mt-5">
                    <button class="btn btn-primary" type="submit">Add Village Incharge</button>
                </div>
            </div>

        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
