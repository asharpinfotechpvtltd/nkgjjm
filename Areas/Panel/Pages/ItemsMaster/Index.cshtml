@page
@model Nkgjjm.Areas.Panel.Pages.ItemsMaster.IndexModel

@{
    ViewData["Title"] = "Index";
    int i = 1;
}

<div class="top-bar">
    <nav aria-label="breadcrumb" class="-intro-x mr-auto hidden sm:flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Application</a></li>
            <li class="breadcrumb-item active" aria-current="page">Items List</li>
        </ol>
    </nav>
    <!-- END: Account Menu -->
</div>
<h2 class="intro-y text-lg font-medium mt-0" style="background-color:#02B9B5; text-align:center; font-weight:bolder; color:white;">
    Items List
</h2>
<div class="grid grid-cols-12 gap-6 mt-1">
    <div class="intro-y col-span-12 flex flex-wrap sm:flex-nowrap items-center mt-2">
        <a class="btn btn-primary shadow-md mr-2" asp-page="Create">Add New Item</a>

        <div class="hidden md:block mx-auto text-slate-500">Total @Model.TotalItem Item(s)</div>
        <div class="w-full sm:w-auto mt-3 sm:mt-0 sm:ml-auto md:ml-0">
            <div class="w-56 relative text-slate-500">
                <form method="post">
                    <input type="text" class="form-control w-56 box pr-10" name="ItemName" placeholder="Search...">
                    <i class="w-4 h-4 absolute my-auto inset-y-0 mr-3 right-0" data-lucide="search"></i>
                </form>
            </div>
        </div>
    </div>
    <!-- BEGIN: Data List -->
    <div class="intro-y col-span-12 overflow-auto lg:overflow-visible">
        <table class="table table-report">
            <thead>
                <tr>
                    <th class="text-center whitespace-nowrap">
                        S.No.
                    </th>
                    <th class="text-center whitespace-nowrap">
                        Item Code

                    </th>
                    <th class="text-center whitespace-nowrap">
                        Item Name

                    </th>
                  
                    <th class="text-center whitespace-nowrap">
                        Unit
                    </th>
                    <th class="text-center whitespace-nowrap">
                        HSN CODE
                    </th>
                   
                    <th class="text-center whitespace-nowrap">
                        Gst
                    </th>
                    <th class="text-center whitespace-nowrap">
                        @Html.DisplayNameFor(model => model.ItemMaster[0].CGst)
                    </th>
                    <th class="text-center whitespace-nowrap">
                        @Html.DisplayNameFor(model => model.ItemMaster[0].SGst)
                    </th>
                    <th class="text-center whitespace-nowrap">
                        @Html.DisplayNameFor(model => model.ItemMaster[0].IGst)
                    </th>
                    <th class="text-center whitespace-nowrap">
                        @Html.DisplayNameFor(model => model.ItemMaster[0].OpeningStock)
                    </th>
                    <th class="text-center whitespace-nowrap">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ItemMaster)
                {
                    <tr class="intro-x">
                        <td class="text-center">
                            @i
                        </td>
                        <td class="text-center">
                            @item.ItemCode
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.ItemName)
                        </td>
                       
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Unitname)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.HsnCode)
                        </td>
                       
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Gst)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.CGst)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.SGst)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.IGst)
                        </td> 
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.OpeningStock)
                        </td>
                        <td class="table-report__action w-56">
                            <div class="flex justify-center items-center">
                                <a class="flex items-center mr-3" asp-page="Edit" asp-route-id="@item.ItemCode"> <i data-lucide="check-square" class="w-4 h-4 mr-1"></i> Edit </a>
                                <a class="flex items-center text-danger" id="Delete" href="javascript:void(0)" data-id="@item.ItemId" data-tw-toggle="modal" data-tw-target="#delete-confirmation-modal"> <i data-lucide="trash-2" class="w-4 h-4 mr-1"></i> Delete </a>
                            </div>
                        </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
    <!-- END: Data List -->

</div>
<!-- BEGIN: Delete Confirmation Modal -->
<div id="delete-confirmation-modal" class="modal" tabindex="-1" aria-hidden="true">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body p-0">
                <div class="p-5 text-center">
                    <i data-lucide="x-circle" class="w-16 h-16 text-danger mx-auto mt-3"></i>
                    <div class="text-3xl mt-5">Are you sure?</div>
                    <div class="text-slate-500 mt-2">

                        Do you really want to delete these records?
                        <br>
                        This process cannot be undone.
                    </div>
                </div>
                <div class="px-5 pb-8 text-center">
                    <input type="hidden" id="dataid" />
                    <button type="button" data-tw-dismiss="modal" class="btn btn-outline-secondary w-24 mr-1">Cancel</button>
                    <button type="button" id="mdlDelete" class="btn btn-danger w-24">Delete</button>
                </div>
            </div>
        </div>
    </div>
</div>