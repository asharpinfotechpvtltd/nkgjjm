@page
@model Nkgjjm.Areas.Panel.Pages.ItemsMaster.CreateModel

@{
    ViewData["Title"] = "Create";
}
<div class="intro-y box mt-5">
    <div class="flex flex-col sm:flex-row items-center p-5 border-b border-slate-200/60 dark:border-darkmode-400">
        <h2 class="font-medium text-base mr-auto">
            Add Village
        </h2>
    </div>
    <form method="post">
        <div id="horizontal-form" class="p-5">
            <div class="preview">
                <div class="form-inline">
                    <label asp-for="ItemMaster.ItemName" class="form-label sm:w-20"></label>
                    <input asp-for="ItemMaster.ItemName" class="form-control" />
                    <span asp-validation-for="ItemMaster.ItemName" class="text-danger"></span>
                </div>
                <div class="form-inline mt-5">
                    <label asp-for="ItemMaster.UnitType" class="form-label sm:w-20"></label>
                    <select asp-items="@Model.Units" asp-for="ItemMaster.UnitType" class="form-control">
                        <option>Select Unit</option>
                    </select>
                    <span asp-validation-for="ItemMaster.UnitType" class="text-danger"></span>
                </div>
                <div class="form-inline mt-5">
                    <label asp-for="ItemMaster.HsnCode" class="form-label sm:w-20"></label>
                    <input asp-for="ItemMaster.HsnCode" class="form-control" />
                    <span asp-validation-for="ItemMaster.HsnCode" class="text-danger"></span>
                </div>
                
                <div class="form-inline mt-5">
                    <label asp-for="ItemMaster.Gst" class="form-label sm:w-20"></label>
                    <input asp-for="ItemMaster.Gst" class="form-control" />
                    <span asp-validation-for="ItemMaster.Gst" class="text-danger"></span>
                </div>
                <div class="form-inline mt-5">
                    <label asp-for="ItemMaster.CGst" class="form-label sm:w-20"></label>
                    <input asp-for="ItemMaster.CGst" class="form-control" />
                    <span asp-validation-for="ItemMaster.CGst" class="text-danger"></span>
                </div>
                <div class="form-inline mt-5">
                    <label asp-for="ItemMaster.SGst" class="form-label sm:w-20"></label>
                    <input asp-for="ItemMaster.SGst" class="form-control" />
                    <span asp-validation-for="ItemMaster.SGst" class="text-danger"></span>
                </div>
                <div class="form-inline mt-5">
                    <label asp-for="ItemMaster.IGst" class="form-label sm:w-20"></label>
                    <input asp-for="ItemMaster.IGst" class="form-control" />
                    <span asp-validation-for="ItemMaster.IGst" class="text-danger"></span>
                </div>
                <div class="sm:ml-20 sm:pl-5 mt-5">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
