@page
@model Nkgjjm.Areas.GM.Pages.Report.ItemBasedOnBomModel
@{
    int i = 1;
}
<div class="top-bar">
    <nav aria-label="breadcrumb" class="-intro-x mr-auto hidden sm:flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Application</a></li>
            <li class="breadcrumb-item active" aria-current="page">Item Based On Bom</li>
        </ol>
    </nav>
    <!-- END: Account Menu -->
</div>
<h2 class="intro-y text-lg font-medium mt-0" style="background-color:#02B9B5; text-align:center; font-weight:bolder; color:white;">
   Item Based On Bom
</h2>
<div class="intro-y box mt-5 pb-5">
    <form method="post">
       

        @if (Model.spItemBasedOnBoms != null)
        {

            <div class="grid grid-cols-12 gap-6 mt-0" style="overflow-x:auto;">
                <!-- BEGIN: Data List -->
                <div class="intro-y col-span-12 overflow-auto lg:overflow-visible">
                    <table class="table table-report">
                        <thead>
                            <tr>

                                <th class="text-center whitespace-nowrap">
                                    S.No.
                                </th>
                                <th class="text-center whitespace-nowrap">
                                    JobWorkid
                                </th>
                                <th class="text-center whitespace-nowrap">
                                    Item Code
                                </th>
                                <th class="text-center whitespace-nowrap">
                                    Item Name
                                </th>
                                <th class="text-center whitespace-nowrap">
                                    Total Qty
                                </th>
                                <th class="text-center whitespace-nowrap">
                                    Total Bom
                                </th>
                                <th class="text-center whitespace-nowrap">
                                    Total Material Issued
                                </th>
                                <th class="text-center whitespace-nowrap">
                                    Total Stock
                                </th>
                                


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.spItemBasedOnBoms)
                            {
                                <tr>
                                    <td class="text-center">@i</td>
                                    <td class="text-center">
                                        @item.JobWorkId
                                    </td>
                                    <td class="text-center">
                                        @item.Rawmaterialid
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.ItemName)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.TotalQty)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.TotalBom)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.MaterialPickedqty)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.TotalStock)
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>

            </div>







        }
    </form>
</div>
