@page
@model Nkgjjm.Areas.GM.Pages.Contractor.IndexModel

@{
    ViewData["Title"] = "Index";
    int i = 1;
}
<div class="top-bar">
    <nav aria-label="breadcrumb" class="-intro-x mr-auto hidden sm:flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Application</a></li>
            <li class="breadcrumb-item active" aria-current="page">Contractor</li>
        </ol>
    </nav>
    <!-- END: Account Menu -->
</div>
<h2 class="intro-y text-lg font-medium mt-0" style="background-color:#02B9B5; text-align:center; font-weight:bolder; color:white;">
    Contractor List
</h2>
<div class="grid grid-cols-12 gap-6 mt-1">
    <div class="intro-y col-span-12 flex flex-wrap sm:flex-nowrap items-center mt-2">
        

        <div class="hidden md:block mx-auto text-slate-500">Showing Contractors</div>
        <div class="w-full sm:w-auto mt-3 sm:mt-0 sm:ml-auto md:ml-0">
            <div class="w-56 relative text-slate-500">
                <input type="text" class="form-control w-56 box pr-10" placeholder="Search...">
                <i class="w-4 h-4 absolute my-auto inset-y-0 mr-3 right-0" data-lucide="search"></i>
            </div>
        </div>
    </div>
    <!-- BEGIN: Data List -->
    <div class="intro-y col-span-12 overflow-auto lg:overflow-visible">
        <table class="table table-report">
            <thead>
                <tr>
                    <th class="text-center whitespace-nowrap">
                        Name
                    </th>
                    <th class="text-center whitespace-nowrap">
                        Contact
                    </th>
                    <th class="text-center whitespace-nowrap">
                        Company Name
                    </th>
                    <th class="text-center whitespace-nowrap">
                        Added Date
                    </th>
                    <th class="text-center whitespace-nowrap">
                        @Html.DisplayNameFor(model => model.Contractors[0].Address)
                    </th>
                    <th class="text-center whitespace-nowrap">
                        @Html.DisplayNameFor(model => model.Contractors[0].Gst)
                    </th>
                     <th class="text-center whitespace-nowrap">
                        @Html.DisplayNameFor(model => model.Contractors[0].Email)
                    </th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Contractors)
                {
                    <tr class="intro-x">
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.ContractorName)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.ContractorContact)
                        </td>
                       <td class="text-center">
                            @Html.DisplayFor(modelItem => item.CompanyName)
                        </td>
                       <td class="text-center">
                            @Html.DisplayFor(modelItem => item.AddedDate)
                        </td>
                       <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                         <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Gst)
                        </td>
                         <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>

