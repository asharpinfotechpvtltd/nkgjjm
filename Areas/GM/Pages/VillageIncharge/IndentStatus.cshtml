@if (Model.SpGetIndentChallan != null && Model.SpGetIndentChallan.Count > 0)
{
    <form method="post" asp-page-handler="CreateIndent">
        <div class="grid grid-cols-12 gap-6 mt-0">
            <!-- BEGIN: Data List -->
            <div class="intro-y col-span-12 overflow-auto lg:overflow-visible">
                <table class="table table-report" id="orders">

                    <tr>
                        <th class="text-center whitespace-nowrap">
                            Jobworkid
                        </th>
                         <th class="text-center whitespace-nowrap">
                            Indent Master Id
                        </th>
                        <th class="text-center whitespace-nowrap">
                            Download Challan
                        </th>
                        
                        <th class="text-center whitespace-nowrap">Upload Challan</th>
                    </tr>
                    @foreach (var item in Model.SpGetIndentChallan)
                    {
                        <tr>
                             <td class="text-center">@item.Jobworkid</td>
                             <td class="text-center">@item.IndentMasterId</td>
                                                       
                            <td class="text-center">                                
                                <a class="flex items-center" target="_blank" href="/Challan/@item.Hofile"> <i data-lucide="View" class="w-4 h-4 mr-1"></i> View </a>                            
                            </td>
                            <td class="text-center">                                
                                <a class="flex items-center" asp-page="UploadChallan" asp-route-jobworkid="@item.Jobworkid" asp-route-IndentMasterId="@item.IndentMasterId"> <i data-lucide="View" class="w-4 h-4 mr-1"></i> Upload Challan </a>                            
                            </td>
                            
                        </tr>
                    }
                </table>
            </div>


            
        </div>

    </form>
}