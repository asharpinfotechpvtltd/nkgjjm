@page
@model Nkgjjm.Areas.Panel.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Index";

    int i = 1;
}
<div class="top-bar">
    <nav aria-label="breadcrumb" class="-intro-x mr-auto hidden sm:flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Application</a></li>
            <li class="breadcrumb-item active" aria-current="page">Users List</li>
        </ol>
    </nav>
    <!-- END: Account Menu -->
</div>
<h2 class="intro-y text-lg font-medium mt-0" style="background-color:#02B9B5; text-align:center; font-weight:bolder; color:white;">
    Users List
</h2>
<div class="grid grid-cols-12 gap-6 mt-1">
    <div class="intro-y col-span-12 flex flex-wrap sm:flex-nowrap items-center mt-2">
        <a class="btn btn-primary shadow-md mr-2" asp-page="Create">Add New User</a>

        <div class="hidden md:block mx-auto text-slate-500">Total  User(s)</div>
        <div class="w-full sm:w-auto mt-3 sm:mt-0 sm:ml-auto md:ml-0">
            <div class="w-56 relative text-slate-500">
                <form method="post">
                    <input type="text" class="form-control w-56 box pr-10" name="Unitname" placeholder="Search...">
                    <i class="w-4 h-4 absolute my-auto inset-y-0 mr-3 right-0" data-lucide="search"></i>
                </form>
            </div>
        </div>
    </div>
    <!-- BEGIN: Data List -->
    <div class="intro-y col-span-12 overflow-auto lg:overflow-visible">
        <table class="table table-report">
            <thead>
                <tr>
                    <th class="text-center whitespace-nowrap">
                        S.No.
                    </th>
                    <th class="text-center whitespace-nowrap">
                        @Html.DisplayNameFor(model => model.User[0].Username)
                    </th>
                    <th class="text-center whitespace-nowrap">
                        @Html.DisplayNameFor(model => model.User[0].Email)
                    </th>
                    <th class="text-center whitespace-nowrap">
                        @Html.DisplayNameFor(model => model.User[0].Mobile)
                    </th>
                    <th class="text-center whitespace-nowrap">
                        @Html.DisplayNameFor(model => model.User[0].Address)
                    </th>
                    <th class="text-center whitespace-nowrap">
                        Designation Name
                    </th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.User)
                {
                    <tr>
                        <td class="text-center">
                            @i
                        </td>
                       <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                       <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Mobile)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.DesignationName)
                        </td>
                        

                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
    <!-- END: Data List -->
</div>
<!-- BEGIN: Delete Confirmation Modal -->

