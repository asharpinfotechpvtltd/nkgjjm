
<html lang="en" class="light">
<!-- BEGIN: Head -->
<head>
    <meta charset="utf-8">
    <link href="~/dist/images/logo.svg" rel="shortcut icon">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="NKG-PRIMUS JV">
    <meta name="keywords" content="NKG-PRIMUS JV">
    <meta name="author" content="smartitbox">
    <title>NKG-PRIMUS</title>
    <!-- BEGIN: CSS Assets-->
    <link rel="stylesheet" href="~/dist/css/app.css" />

    <!-- END: CSS Assets-->
</head>
<!-- END: Head -->
<body class="py-5">
    <!-- BEGIN: Mobile Menu -->
    <div class="mobile-menu md:hidden">
        <div class="mobile-menu-bar">
            <a href="#" class="flex mr-auto">
                <img alt="NKG-PRIMUS" class="w-40" src="~/dist/images/NKGPrimus.png" />
            </a>
            <a href="javascript:;" class="mobile-menu-toggler"> <i data-lucide="bar-chart-2" class="w-8 h-8 text-white transform -rotate-90"></i> </a>
        </div>
        <div class="scrollable">
            <a href="javascript:;" class="mobile-menu-toggler"> <i data-lucide="x-circle" class="w-8 h-8 text-white transform -rotate-90"></i> </a>
            <ul class="scrollable__content py-2">

                <li>
                    <a asp-page="/Director/index" class="menu">
                        <div class="menu__icon"> <i data-lucide="hard-drive"></i> </div>
                        <div class="menu__title"> Dashboard </div>
                    </a>
                </li>
                <li>
                    <a asp-page="/Report/OverAllStock" class="menu">
                        <div class="side-menu__icon"> <i data-lucide="credit-card"></i> </div>
                        <div class="side-menu__title">Stock</div>
                    </a>
                </li>
                <li>
                    <a asp-page="/Report/IndentPendingReport" class="menu">
                        <div class="side-menu__icon"> <i data-lucide="credit-card"></i> </div>
                        <div class="side-menu__title">Indent Pending</div>
                    </a>
                </li>
                <li>
                    <a asp-page="/Report/ItemBasedOnBom" class="menu">
                        <div class="side-menu__icon"> <i data-lucide="credit-card"></i> </div>
                        <div class="side-menu__title">Bom Based Item</div>
                    </a>
                </li>
                

                <li>
                    <a asp-page="/Index" asp-page-handler="Logout" class="menu">
                        <div class="menu__icon"> <i data-lucide="message-square"></i> </div>
                        <div class="menu__title"> Signout </div>
                    </a>
                </li>

            </ul>
        </div>
    </div>
    <!-- END: Mobile Menu -->
    <div class="flex mt-[4.7rem] md:mt-0">
        <!-- BEGIN: Side Menu -->
        <nav class="side-nav">
            <a href="" class="intro-x flex items-center pl-5 pt-4">
                <img alt="NKG Primus" class="w-40" src="~/dist/images/NKGPrimus.png" />
                <span class="hidden xl:block text-white text-lg ml-3">  </span>
            </a>
            <div class="side-nav__devider my-6"></div>
            @*<ul>
            @await Component.InvokeAsync("Menu")
            </ul>*@
            <ul>
                <li>
                    <a href="/Director/Index" class="side-menu zoom-innn">
                        <div class="side-menu__icon"> <i data-lucide="home"></i> </div>
                        <div class="side-menu__title">
                            Dashboard
                        </div>
                    </a>

                </li>
                <li>
                    <a asp-page="/Report/OverAllStock" class="side-menu zoom-innn">
                        <div class="side-menu__icon"> <i data-lucide="credit-card"></i> </div>
                        <div class="side-menu__title">Stock</div>
                    </a>
                </li>
                <li>
                    <a asp-page="/Report/IndentPendingReport" class="side-menu zoom-innn">
                        <div class="side-menu__icon"> <i data-lucide="credit-card"></i> </div>
                        <div class="side-menu__title">Indent Pending</div>
                    </a>
                </li>
                <li>
                    <a asp-page="/Report/ItemBasedOnBom" class="side-menu zoom-innn">
                        <div class="side-menu__icon"> <i data-lucide="credit-card"></i> </div>
                        <div class="side-menu__title">Bom Based Item</div>
                    </a>
                </li>
                <li>
                    <a asp-page="/Index" asp-page-handler="Logout" class="side-menu zoom-innn">
                        <div class="side-menu__icon"> <i data-lucide="message-square"></i> </div>
                        <div class="side-menu__title"> Signout </div>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- END: Side Menu -->
        <!-- BEGIN: Content -->
        <div class="content">
            <!-- BEGIN: Top Bar -->
            @RenderBody()

            <!-- END: Content -->
        </div>
    </div>


    @*<script src="~/lib/jquery/dist/jquery.js"></script>*@
    <script src="~/dist/js/app.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11" defer></script>
    <!-- END: JS Assets-->
    @RenderSection("Scripts",required:false)
</body>
</html>