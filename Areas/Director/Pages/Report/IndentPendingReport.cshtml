@page
@model Nkgjjm.Areas.Director.Pages.Report.IndentPendingReportModel
@{
    int i = 1;
}
<div class="top-bar">
    <nav aria-label="breadcrumb" class="-intro-x mr-auto hidden sm:flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Application</a></li>
            <li class="breadcrumb-item active" aria-current="page">Indent Pending Report</li>
        </ol>
    </nav>
    <!-- END: Account Menu -->
</div>
<h2 class="intro-y text-lg font-medium mt-0" style="background-color:#02B9B5; text-align:center; font-weight:bolder; color:white;">
    Indent Pending Report
</h2>
<div class="intro-y box mt-5 pb-5">
    <form method="post">
       

        @if (Model.SpIndentPendingReport != null)
        {

            <div class="grid grid-cols-12 gap-6 mt-0" style="overflow-x:auto;">
                <!-- BEGIN: Data List -->
                <div class="intro-y col-span-12 overflow-auto lg:overflow-visible">
                    <table class="table table-report">
                        <thead>
                            <tr>

                                <th class="text-center whitespace-nowrap">
                                    S.No.
                                </th>
                                <th class="text-center whitespace-nowrap">
                                    Date
                                </th>
                                <th class="text-center whitespace-nowrap">
                                    Jobworkid
                                </th>
                                <th class="text-center whitespace-nowrap">
                                    Warehouse Status
                                </th>
                                <th class="text-center whitespace-nowrap">
                                    Ho Status
                                </th>
                                <th class="text-center whitespace-nowrap">
                                    Warehouse Name
                                </th>
                                


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.SpIndentPendingReport)
                            {
                                <tr>
                                    <td class="text-center">@i</td>
                                    <td class="text-center">
                                        @item.Date.ToShortDateString()
                                    </td>
                                    <td class="text-center">
                                        @item.Jobworkid
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.WarehouseInchargeStatus)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.Hostatus)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.WarehouseName)
                                    </td>
                                    


                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>

            </div>







        }
    </form>
</div>



